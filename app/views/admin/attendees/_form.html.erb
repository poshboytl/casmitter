<%= form_with model: [:admin, @attendee], url: (@attendee.persisted? ? admin_attendee_path(@attendee) : admin_attendees_path), local: true, class: "p-6 space-y-6" do |form| %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <!-- Type Selection -->
    <div>
      <%= form.label :type, "Type", class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Type <span class="text-red-500">*</span>
      <% end %>
      <%= form.select :type, 
          [['Host', 'Host'], ['Guest', 'Guest']], 
          { prompt: 'Select type...' }, 
          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @attendee.errors[:type].any?}" } %>
      <% if @attendee.errors[:type].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @attendee.errors[:type].join(', ') %></p>
      <% end %>
    </div>

    <!-- Name -->
    <div>
      <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Name <span class="text-red-500">*</span>
      <% end %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @attendee.errors[:name].any?}", placeholder: "Enter full name" %>
      <% if @attendee.errors[:name].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @attendee.errors[:name].join(', ') %></p>
      <% end %>
    </div>

    <!-- Avatar URL -->
    <div class="sm:col-span-2">
      <%= form.label :avatar_url, "Avatar URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.url_field :avatar_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @attendee.errors[:avatar_url].any?}", placeholder: "https://example.com/avatar.jpg" %>
      <% if @attendee.errors[:avatar_url].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @attendee.errors[:avatar_url].join(', ') %></p>
      <% end %>
      <p class="mt-1 text-sm text-gray-500">URL to the attendee's profile picture</p>
    </div>

    <!-- Bio -->
    <div class="sm:col-span-2">
      <%= form.label :bio, "Short Bio", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :bio, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @attendee.errors[:bio].any?}", placeholder: "A brief professional description" %>
      <% if @attendee.errors[:bio].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @attendee.errors[:bio].join(', ') %></p>
      <% end %>
      <p class="mt-1 text-sm text-gray-500">Brief professional description (one line)</p>
    </div>

    <!-- Description -->
    <div class="sm:col-span-2" data-controller="easymde">
      <%= form.label :desc, "Detailed Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :desc, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @attendee.errors[:desc].any?}", placeholder: "Detailed background, experience, and achievements...", data: { easymde_target: "textarea" } %>
      <% if @attendee.errors[:desc].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @attendee.errors[:desc].join(', ') %></p>
      <% end %>
      <p class="mt-1 text-sm text-gray-500">Supports Markdown formatting with rich text editor</p>
    </div>

    <!-- Social Links -->
    <div class="sm:col-span-2" 
         data-controller="social-links" 
         data-existing-links="<%= @attendee.social_links&.to_json || '{}' %>">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-medium text-gray-900">Social Links</h3>
        <button type="button" 
                data-action="click->social-links#addLink"
                class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Link
        </button>
      </div>
      
      <!-- Hidden field to store the final JSON data -->
      <input type="hidden" name="<%= @attendee.class.name.downcase %>[social_links]" value="{}" data-social-links-target="hiddenField">
      
      <!-- Container for dynamic social link fields -->
      <div data-social-links-target="container" class="space-y-3">
        <!-- Dynamic fields will be added here -->
      </div>
      
      <!-- Template for new social link fields -->
      <template data-social-links-target="template">
        <div class="social-link-item flex items-center space-x-3 p-3 bg-gray-50 rounded-md">
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 mb-1">Platform</label>
            <input type="text" 
                   class="platform-input w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                   placeholder="e.g., Twitter, X, Mastodon, LinkedIn">
          </div>
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 mb-1">URL</label>
            <input type="url" 
                   class="url-input w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                   placeholder="https://...">
          </div>
          <div class="flex-shrink-0 mt-6">
            <button type="button" 
                    data-action="click->social-links#removeLink"
                    class="inline-flex items-center p-2 border border-transparent rounded-md text-red-600 hover:text-red-800 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </template>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_attendees_path, class: "admin-button bg-white border border-gray-300 hover:bg-gray-50 text-gray-700" %>
    <%= form.submit submit_text, class: "admin-button admin-button-primary" %>
  </div>
<% end %>
