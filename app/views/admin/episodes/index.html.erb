<div class="max-w-7xl mx-auto">
  <!-- Page Header -->
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Episodes</h1>
      <p class="mt-2 text-gray-600">Manage your podcast episodes</p>
    </div>
    <%= link_to new_admin_episode_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200" do %>
      <i class="fas fa-plus mr-2"></i>New Episode
    <% end %>
  </div>

  <!-- Episodes List -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">All Episodes</h3>
    </div>
    
    <% if @episodes.any? %>
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200 table-fixed">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/5">Episode</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-16">Number</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-20">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-24">Duration</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-24">Created</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @episodes.each do |episode| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <img class="h-10 w-10 rounded-lg object-cover" src="<%= episode.cover_image_url %>" alt="Episode cover">
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= episode.name %></div>
                      <div class="text-sm text-gray-500 truncate max-w-xs"><%= episode.summary %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  #<%= episode.number %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                    <%= case episode.status
                        when 'published'
                          'bg-green-100 text-green-800'
                        when 'draft'
                          'bg-yellow-100 text-yellow-800'
                        when 'hidden'
                          'bg-red-100 text-red-800'
                        else
                          'bg-gray-100 text-gray-800'
                        end %>">
                    <%= episode.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% if episode.duration.present? %>
                    <%= episode.duration_in_hours %>
                  <% else %>
                    <span class="text-gray-400">--:--:--</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= episode.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", episode_path(episode), 
                        class: "text-blue-600 hover:text-blue-900" %>
                    <span class="text-gray-300">|</span>
                    <%= link_to "Edit", edit_admin_episode_path(episode), 
                        class: "text-green-600 hover:text-green-900" %>
                    <span class="text-gray-300">|</span>
                    <%= link_to "Delete", admin_episode_path(episode), 
                        data: { 
                          turbo_method: :delete,
                          controller: "delete-confirmation"
                        },
                        class: "text-red-600 hover:text-red-900" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="px-6 py-4">
        <%= render_pagination @episodes %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i class="fas fa-podcast text-4xl text-gray-400 mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No episodes yet</h3>
        <p class="text-gray-500">Get started by creating your first podcast episode.</p>
      </div>
    <% end %>
  </div>
</div>
