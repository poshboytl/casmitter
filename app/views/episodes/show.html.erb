<main class="max-w-5xl mx-auto mb-16">
   <div class="container mx-auto px-4 text-center">
     <h1 class="text-4xl font-bold text-gray-700">
       Teahour 2.0
     </h2>
  </div>
  <img alt="A person in a brown suit standing against a green tiled wall with urinals" class="w-full mb-3" height="400" src="<%= asset_path("omshow.png")%>" width="1200"/>
  <div class="bg-white py-12">
   <div class="container mx-auto px-4 text-center">
    <h2 class="text-4xl font-bold text-gray-700">
     <%= @episode.name %>
    </h2>
    <p class="text-gray-500 mt-2">
     Episode <%= @episode.number %> · <%= @episode.published_at.strftime("%Y-%m-%d") %> · <%= @episode.duration / 3600 %> hr <%= (@episode.duration % 3600) / 60 %> mins
    </p>
    <div class="mt-4">
     <audio class="w-full" controls="">
      <source src="<%= @episode.file_uri %>" type="audio/mpeg"/>
      Your browser does not support the audio element.
     </audio>
    </div>
    <%= render 'shared/subscription_buttons' %>
   </div>
  </div>
  <!----- Host begin ----->

  <div class="mb-8 flex gap-12">
    <div>
      <h2 class="text-sm font-medium mb-4">
        Your Hosts
      </h2>
      <div class="flex gap-2">
        <% @hosts.each do |host| %>
          <img alt="Host 1 profile picture" class="w-10 h-10 rounded-full" height="40" src="<%= host.avatar_url %>" width="40"/>
        <% end %>
      </div>
    </div>
    <div>
      <h2 class="text-sm font-medium mb-4">
        Guests
      </h2>
      <div class="flex gap-2">
        <% @guests.each do |guest| %>
          <img alt="Guest 1 profile picture" class="w-10 h-10 rounded-full" height="40" src="<%= guest.avatar_url %>" width="40"/>
        <% end %>
      </div>
    </div>
  </div>
 
  <div class="mb-8">
    <h2 class="text-xl font-medium mb-4">
      About this Episode
    </h2>
    <p class="text-gray-600 mb-4">
      <%= @episode.summary %>
    </p>
  </div>
  <div class="mb-8">
    <h2 class="text-xl font-medium mb-4">
      Show Notes
    </h2>
    <%= @episode.desc %>
  </div>
</main>