<%= link_to episode_path(episode.slug), class: "episode-card block h-full" do %>
  <div class="flex flex-col h-full">
    <img alt="<%= episode.name %>" class="w-full aspect-video object-cover mb-4" 
         src="<%= episode.cover_image_url.start_with?('http') ? episode.cover_image_url : asset_path(episode.cover_image_url) %>"/>
    <div class="flex flex-col flex-grow">
      <h3 class="text-black-500 hover:underline mb-2">
        #<%= episode.number %> - <%= episode.name %>
      </h3>
      <p class="text-sm text-gray-500 mt-auto">
        <%= format_episode_duration_and_date(episode) %>
      </p>
    </div>
  </div>
<% end %> 