<div class="max-w-5xl mx-auto mb-16">
<h1 class="text-4xl font-bold text-center mb-2">
    Teahour 2.0
  </h1>
  <img alt="A person in a brown suit standing against a green tiled wall with urinals" class="w-full mb-3" height="400" src="<%= asset_path("omindex.png")%>" width="1200"/>
  
  <p class="text-center text-gray-600 mb-4">
    <b>For Full Spectrum Developers</b>
  </p>
  <%= render 'shared/subscription_buttons' %>
</div>
<!-- About Section -->
<div class="max-w-5xl mx-auto mb-16 flex gap-16">
  <div class="flex-1">
    <h2 class="font-bold mb-4">
      关于本节目
    </h2>
    <p class="text-gray-600 mb-8">
      Teahour: 做程序员喜欢的大型技术类八卦节目。
    </p>
    <h2 class="font-bold mb-4">
      Teahour 社交账号
    </h2>
    <div class="flex space-x-2">
      <a class="bg-black text-white p-2 rounded" href="#">
        𝕏
      </a>
    </div>
  </div>
  <div class="w-64">
    <h2 class="font-bold mb-4">
      Your Hosts
    </h2>
    <div class="flex space-x-4">
      <% @hosts.each do |host| %>
        <div class="text-center">
         <img alt="Terry Tai" class="rounded-full mb-2" height="60" src="https://media24.fireside.fm/file/fireside-images-2024/podcasts/images/6/635ad9f1-6ce0-4f31-84cf-030e0c949169/hosts/7/74b2858e-14c6-4e8d-9101-92e94b091570/avatar_small.jpg?v=1" width="60"/>
         <p class="text-sm">
         Terry Tai
         </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Episodes Section -->
<div class="max-w-5xl mx-auto mb-16">
  <h2 class="font-bold mb-8">
    Episodes
  </h2>
  <div class="grid grid-cols-3 gap-8">
    <!-- Episode cards -->
    <% @episodes.each do |episode| %>
    <%= link_to episode_path(episode.slug), class: "episode-card block" do %>
      <div>
        <img alt="Back to Work Episode 644" class="w-full mb-4" height="400" src="<%= asset_path 'logo.png' %>" width="400"/>
        <h3 class="text-black-500 hover:underline mb-2">
          #<%= episode.number %> - <%= episode.name %>
        </h3>
        <p class="text-sm text-gray-500">
        <%= episode.published_at.strftime("%Y-%m-%d") %> | <%= episode.duration / 3600 %> hr <%= (episode.duration % 3600) / 60 %> mins
        </p>
      </div>
    <% end %>
    <% end %>
  </div>
</div>