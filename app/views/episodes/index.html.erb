<div class="max-w-5xl mx-auto mb-16">
  <h1 class="text-4xl font-bold font-mono text-center mb-2">
    Teahour 2.0 Staging
  </h1>
  
  <%= render 'shared/neofetch' %>
  
  <p class="text-center text-gray-600 mb-4">
    <b>For Full Spectrum Developers</b>
  </p>
  <%= render 'shared/subscription_buttons' %>
</div>

<!-- About Section -->
<div class="max-w-5xl mx-auto mb-16 flex flex-col md:flex-row gap-16 px-4">
  <div class="flex-1">
    <h2 class="font-bold mb-4">
      About Teahour
    </h2>
    <p class="text-gray-600 mb-8">
      程序员喜欢的大型技术类八卦节目。
    </p>
  </div>
  <div class="w-full md:w-64">
    <h2 class="font-bold mb-4">
      Your Hosts
    </h2>
    <div class="flex space-x-4">
      <% @hosts.each do |host| %>
        <%= render 'shared/person_card', person: host, path: host_path(host), size: 60 %>
      <% end %>
    </div>
  </div>
</div>

<!-- Episodes Section -->
<div class="max-w-5xl mx-auto mb-16 px-4">
  <h2 class="font-bold mb-8">
    Episodes
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @episodes.each do |episode| %>
      <%= render 'episodes/episode_card', episode: episode %>
    <% end %>
  </div>
</div>